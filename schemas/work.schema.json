{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://example.com/schemas/work.schema.json",
  "title": "Work Stories",
  "type": "object",
  "additionalProperties": false,
  "required": ["stories"],
  "properties": {
    "stories": {
      "type": "array",
      "items": { "$ref": "#/$defs/story" }
    }
  },
  "$defs": {
    "story": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "id",
        "title",
        "description",
        "acceptance_criteria",
        "security_requirements",
        "status"
      ],
      "properties": {
        "id": {
          "type": "string",
          "pattern": "^[A-Z]+-[0-9]{3,}$"
        },
        "title": {
          "type": "string",
          "minLength": 3
        },
        "description": {
          "type": "string",
          "minLength": 10
        },
        "acceptance_criteria": {
          "type": "array",
          "minItems": 1,
          "items": {
            "type": "string",
            "minLength": 3
          }
        },
        "security_requirements": {
          "type": "array",
          "minItems": 1,
          "items": {
            "type": "string",
            "minLength": 3
          }
        },
        "status": {
          "type": "string",
          "enum": ["todo", "in_progress", "blocked", "done"]
        }
      }
    }
  }
}
