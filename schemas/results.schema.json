{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://example.com/schemas/results.schema.json",
  "title": "Story Results",
  "type": "object",
  "additionalProperties": false,
  "required": ["results"],
  "properties": {
    "results": {
      "type": "array",
      "items": { "$ref": "#/$defs/result" }
    }
  },
  "$defs": {
    "result": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "id",
        "status",
        "unit_tests",
        "quality_gates",
        "security_review",
        "artifacts",
        "commit_sha",
        "timestamp_utc"
      ],
      "properties": {
        "id": {
          "type": "string",
          "pattern": "^[A-Z]+-[0-9]{3,}$"
        },
        "status": {
          "type": "string",
          "enum": ["done", "blocked", "failed"]
        },
        "unit_tests": {
          "type": "array",
          "items": {
            "type": "string",
            "minLength": 1
          }
        },
        "quality_gates": {
          "type": "array",
          "items": {
            "type": "string",
            "minLength": 1
          }
        },
        "security_review": {
          "type": "array",
          "items": {
            "type": "string",
            "minLength": 1
          }
        },
        "artifacts": {
          "type": "array",
          "items": {
            "type": "string",
            "minLength": 1
          }
        },
        "commit_sha": {
          "type": "string",
          "pattern": "^[a-f0-9]{7,40}$"
        },
        "timestamp_utc": {
          "type": "string",
          "format": "date-time"
        }
      }
    }
  }
}
